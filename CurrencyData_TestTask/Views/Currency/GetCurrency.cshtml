@model CurrencyData.Models.DataObjects.Valute

<div class="text-center">
    <h2>Information about a сhosen currency</h2>
    <h3>'@Model.Name'</h3>
</div>
<br />
<div class="container-lg">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                 <th colspan="3">
                     NAME
                 </th>            
            </tr>  
        </thead>
        <tbody class="text-center">
            <tr>
                <td colspan="3">
                    @Model.Name
                </td>
            </tr>
        </tbody>
        <thead>
            <tr>
                <th>
                    SHORT NAME
                </th>
                <th>
                    CURRENT VALUE
                </th>
                <th>
                    PREVIOUS VALUE
                </th>                
            </tr>                      
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.CharCode
                </td>   
                <td>
                    @Model.Value
                </td>
                <td>
                    @Model.Previous
                </td>
            </tr>            
        </tbody>      
    </table>
    <br />
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary text-white">Back to the Main Page</a>
    </div>
</div>