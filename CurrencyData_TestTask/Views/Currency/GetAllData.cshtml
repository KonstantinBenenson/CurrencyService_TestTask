@model CurrencyData.Models.DataObjects.CurrencyInfo

<head>    
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"/>
</head>
<header class="text-center">
    <h1>Currency Info</h1>       
</header>
<body> 
    <div class="container">
        <table id="myTable" class="table table-striped table-hover table-bordered">           
            <thead> 
                <tr>
                    <th>
                        Currency
                    </th>
                    <th>
                        Short Name
                    </th>
                    <th>
                        Current Value
                    </th>
                    <th>
                        Previous Value
                    </th>
                </tr>
            </thead>
            @if (Model.Valute.Values.Count == 0)
                {
                <h3>No information to be displayed.</h3>
            }
            else if(DateTime.Today.Date != Model.Date.Date)
            {
                <h4 class="pb-2 pt-2">Today is probably a weekend.</h4>
                <h5>Information showed is on day of @Model.Date.</h5>
                <br />
                <tbody>                
                @foreach (var currency in Model.Valute.Values)
                        {
                            <tr>
                                <td>
                                    @currency.Name
                                </td>
                                <td>
                                    @currency.CharCode
                                </td>
                                <td>
                                    @currency.Value
                                </td>
                                <td>
                                    @currency.Previous
                                </td>
                            </tr>
                        }             
            </tbody>
            }
            else{
                <h3>On date @Model.Date (@Model.Date.DayOfWeek)</h3> 
                <br />
            <tbody>                
                @foreach (var currency in Model.Valute.Values)
                        {
                            <tr>
                                <td>
                                    @currency.Name
                                </td>
                                <td>
                                    @currency.CharCode
                                </td>
                                <td>
                                    @currency.Value
                                </td>
                                <td>
                                    @currency.Previous
                                </td>
                            </tr>
                        }             
            </tbody>
            }
        </table>
        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary text-white">Back to the Main Page</a>
        </div>
    </div>   
</body>

 @section Scripts{
    <script scr="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
            "paging": "true",
            "lengthMenu": [[5,10,20,-1], [5,10,20,"All"]]
            })
        })
    </script>
    }


